@model mvcStok.Models.Entity.tblUrun
@{
    ViewBag.Title = "UrunEkle";
    Layout = "~/Views/Shared/_mainLayout.cshtml";
}

<form method="post" class="form-group">
    <div>
        <label>Ürün Adı</label>
        <input type="text" class="form-control" name="urunAd"required=""maxlength="30" />
    </div>
    <div>
        <label>Marka</label>
        <input type="text" class="form-control" name="urunMarka"placeholder="Buraya markayı yazınız" />
    </div>
    <div>
        <label>Kategori Seçiniz</label>
        @Html.DropDownListFor(m=>m.tblKategoriler.kategoriId,(List<SelectListItem>)ViewBag.dgr,new {@class="form-control"})
    </div>
    <div>
        <label>Fiyat</label>
        <input type="text" class="form-control" name="fiyat" />
    </div>
    <div>
        <label>Stok</label>
        <input type="text" class="form-control" name="stok" />
    </div>
    <div>
        <button class="btn btn-info" style="margin-top:15px">Ürün
        Ekle</button>
    </div>

</form>


