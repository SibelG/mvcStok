@using mvcStok.Models.Entity
@model List<tblUrun>
@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_mainLayout.cshtml";
}
<table id="tbl1" class="table table-bordered">
    <thead>
        <tr>
            <th>Ürün Id</th>
            <th>Ürün Adı </th>
            <th>Ürün Markası</th>
            <th>Ürün Kategori</th>
            <th>Ürün Fiyat</th>
            <th>Stok</th>
            <th>Sil</th>
            <th>Güncelle</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var urn in Model)
        {
            <tr>
                <td>@urn.urunId</td>
                <td>@urn.urunAd</td>
                <td>@urn.urunMarka</td>
                <td>@urn.tblKategoriler.kategoriId</td>
                <td>@urn.fiyat</td>
                <td>@urn.stok</td>
                <td><a href="/Urun/Sil/@urn.urunId" class="btn btn-danger">Sil</a></td>
                <td><a href="/Urun/UrunGetir/@urn.urunId" class="btn btn-success">Güncelle</a></td>
            </tr>
        }
    </tbody>
</table>
<a href="/Urun/UrunEkle/" class="btn btn-primary">Yeni Ürün Ekle</a>
<link href="~/Content/DataTables/css/dataTables.bootstrap4.css" rel="stylesheet" />
<script type="text/javascript"src="https://cdn.datatable/1.10.20/js/jquery.dataTables.min.js"></script>
<script>
    $("#tbl1").DataTable();
</script>